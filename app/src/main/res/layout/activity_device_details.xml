<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeviceDetails">

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="60dp"
        android:layout_marginTop="@dimen/margin_screen"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:src="@drawable/broken_image"
        android:contentDescription="@string/device_informations"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/half_margin_screen"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/check_in_detail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/button_red"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/margin_screen"
        />
</LinearLayout>